    <script>
        // Function to create table rows
        function generateRows(count) {
            const tbody = document.getElementById('tableBody');
            let html = '';
            
            for (let i = 0; i < count; i++) {
                html += `
                <tr>
                    <td class="text-center relative">
                        <div class="w-full h-full absolute top-0 left-0 flex items-center justify-center">
                             <div contenteditable="true" class="w-[90%] border-b border-dotted border-gray-400 outline-none"></div>
                        </div>
                    </td>
                    <td class="text-center relative">
                         <div class="w-full h-full absolute top-0 left-0 flex items-center justify-center">
                             <div contenteditable="true" class="w-[90%] border-b border-dotted border-gray-400 outline-none"></div>
                        </div>
                    </td>
                    <td>
                        <div class="flex justify-center items-center gap-4 h-full">
                            <div class="flex items-center gap-1">
                                <div class="checkbox-mimic" onclick="toggleCheck(this)"></div> 
                                <span>I</span>
                                <div contenteditable="true" class="border-b border-dotted border-black w-8 outline-none ml-1"></div>
                            </div>
                            <div class="flex items-center gap-1">
                                <div class="checkbox-mimic" onclick="toggleCheck(this)"></div> 
                                <span>R</span>
                                <div contenteditable="true" class="border-b border-dotted border-black w-8 outline-none ml-1"></div>
                            </div>
                        </div>
                    </td>
                    <td class="text-center relative">
                        <div class="w-full h-full absolute top-0 left-0 flex items-center justify-center">
                             <div contenteditable="true" class="w-[90%] border-b border-dotted border-gray-400 outline-none"></div>
                        </div>
                    </td>
                </tr>
                `;
            }
            tbody.innerHTML = html;
        }

        // Toggle checkbox visual
        window.toggleCheck = function(element) {
            // Direct toggle on the clicked element
            element.classList.toggle('checked');
        }

        // Generate 18 rows to fit A4 approximately
        generateRows(18);
    </script>
</body>
